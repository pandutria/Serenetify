<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center_horizontal"
        android:text="Tahap 4 - Mengembangkan Pola Pikir Sehat"
        android:textColor="@color/primary"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Tugas yang mencakup latihan untuk mengembangkan pola pikir sehat melalui berbagai aktivitas positif."
        android:textAlignment="center"
        android:textColor="#878787"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/cb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/poppins_regular"
        android:paddingLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="Baca Artikel: Pelajari cara mengubah pola pikir negatif menjadi positif."
        android:textColor="#464646"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/cb2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/poppins_regular"
        android:paddingLeft="10dp"
        android:text="Afirmasi Positif: Tulis dan ulangi tiga afirmasi positif setiap hari."
        android:textColor="#464646"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/cb3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/poppins_regular"
        android:paddingLeft="10dp"
        android:text="Latihan Mindfulness: Ikuti sesi latihan mindfulness untuk meningkatkan kesadaran diri."
        android:textColor="#464646"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/cb4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/poppins_regular"
        android:paddingLeft="10dp"
        android:text="Tonton Video Edukasi: Pelajari pentingnya self-compassion melalui video."
        android:textColor="#464646"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/cb5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/poppins_regular"
        android:paddingLeft="10dp"
        android:text="Jurnal Pola Pikir: Identifikasi pikiran negatif dan tuliskan alternatif pikiran positifnya."
        android:textColor="#464646"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:layout_marginBottom="70dp"
        android:background="@drawable/bkg_btn_chat_doctor"
        android:fontFamily="@font/poppins_semibold"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>
